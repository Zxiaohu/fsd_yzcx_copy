<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_line"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_task_progress_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/dimen_720maxspacing"
        android:text="@string/ceshi"
        android:textColor="@color/blue1"
        android:textSize="@dimen/large" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task_progress_tip"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:padding="@dimen/dimen_720maxspacing"
            android:text="@string/ceshi"
            android:textSize="@dimen/medium" />

        <TextView
            android:id="@+id/tv_task_progress_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:padding="@dimen/dimen_720maxspacing"
            android:text="@string/ceshi"
            android:textColor="@color/huise"
            android:textSize="@dimen/medium" />
    </LinearLayout>
</LinearLayout><!-- From: file:/D:/xiaohuide/201407workspace/fsd_yzcx_copy/物业助手副本/res/layout/adapter_task_progress.xml -->