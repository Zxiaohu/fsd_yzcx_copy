<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_720minspacing"
    android:background="@drawable/border_line"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720sheight"
        android:background="@color/blue4"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dimen_720maxspacing"
        android:text="已完成"
        android:textColor="@color/black"
        android:textSize="@dimen/medium" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_content"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dimen_720maxspacing"
        android:text="2016-1-15 11:45:38"
        android:textColor="@color/huise"
        android:textSize="@dimen/micro" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_720height"
        android:layout_alignLeft="@+id/tv_type"
        android:layout_below="@+id/tv_type"
        android:layout_marginBottom="@dimen/dimen_720maxspacing"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dimen_720maxspacing"
        android:text="家里的水龙头坏了啊"
        android:textColor="@color/black"
        android:textSize="@dimen/medium" />

