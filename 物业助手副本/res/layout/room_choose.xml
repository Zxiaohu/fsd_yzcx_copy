<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen_720maxspacing"
    android:background="@drawable/shape_ly_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmallTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载数据...."
            android:textColor="@color/blue2"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <Spinner
        android:id="@+id/sp_precinct"
        style="@style/style_sp_base"
        android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/huise1" />

    <Spinner
        android:id="@+id/sp_floor"
        style="@style/style_sp_base"
        android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/huise1" />

    <Spinner
        android:id="@+id/sp_unit"
        style="@style/style_sp_base"
        android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/huise1" />

    <Spinner
        android:id="@+id/sp_room"
        style="@style/style_sp_base"
        android:layout_width="match_parent" />

</LinearLayout>