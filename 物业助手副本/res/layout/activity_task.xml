<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.fsd.owner.property.ui.view.TitleBar
        android:id="@+id/tb_task_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_task_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_720height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_task_left"
            style="@style/style_task_tvInditer"
            android:background="@drawable/seletor_tv"
            android:text="@string/ceshi" />

        <TextView
            android:id="@+id/tv_task_right"
            style="@style/style_task_tvInditer"
            android:background="@drawable/seletor_tv"
            android:text="@string/ceshi" />
    </LinearLayout>

</LinearLayout>