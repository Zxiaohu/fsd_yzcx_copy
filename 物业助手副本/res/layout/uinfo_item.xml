<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_uinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen_720largespacing"
    android:paddingRight="@dimen/dimen_720largespacing"
    android:background="@drawable/seletor_tv" >

    <TextView
        android:id="@+id/tv_uinfo_tip"
        style="@style/style_uinfo_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_720height"
        android:layout_weight="1"
        android:text="昵称" />

    <TextView
        android:id="@+id/tv_uinfo_content"
        style="@style/style_uinfo_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_720height"
        android:layout_weight="2"
        android:singleLine="true"
        android:gravity="center_vertical|right"
        android:text="追鱼不是梦"
        android:textColor="@color/huise" />

</LinearLayout>