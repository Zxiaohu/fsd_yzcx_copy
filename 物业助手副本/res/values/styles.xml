<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="style_sp_base">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">@dimen/dimen_720minspacing</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="style_login_et">
        <item name="android:drawableRight">@drawable/ic_clear_search_api_holo_light</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/dimen_720maxspacing</item>
        <item name="android:paddingRight">@dimen/dimen_720maxspacing</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="style_first_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="style_border_hline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/huise1</item>
    </style>
	 <style name="style_border_hsline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/huise</item>
         <item name="android:layout_marginLeft">@dimen/dimen_720minspacing</item>
        <item name="android:layout_marginRight">@dimen/dimen_720minspacing</item>
    </style>
  
    <style name="style_border_vline">
        <item name="android:layout_width">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/huise1</item>
    </style>

    <style name="style_btn_base">
        <item name="android:textColor">@color/blue1</item>
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="style_uc_tv_base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">@dimen/dimen_720maxspacing</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_function_item">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">@dimen/dimen_720maxspacing</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:drawableLeft">@drawable/btn_radio_on</item>
        <item name="android:background">@drawable/seletor_tv</item>
    </style>

    <style name="style_uinfo_item" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large</item>
    </style>
    <style name="style_titlebar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:background">@drawable/seletor_tb</item>
    </style>
    <style name="style_et_update" parent="@style/style_login_et">
        <item name="android:layout_marginLeft">@dimen/dimen_720largespacing</item>
        <item name="android:layout_marginRight">@dimen/dimen_720largespacing</item>
        <item name="android:layout_marginTop">@dimen/dimen_720largespacing</item>
        <item name="android:textSize">@dimen/large</item>
    </style>
    <style name="style_border_etline" parent="@style/style_border_hsline">
        <item name="android:background">@color/green</item>
        <item name="android:layout_marginLeft">@dimen/dimen_720largespacing</item>
        <item name="android:layout_marginRight">@dimen/dimen_720largespacing</item>
    </style>
</resources>